
body{
	margin:0px;	
}

.header
{
	width:100%;
	background: #3366ff;
}
			
.header_img{
	width:100%;
}
			
.name
{
	position:absolute;
	width:100%;
	top:55px;
	text-align:center;
}

.name_img{
	min-width:400px;
	width:32%;
}

.layout{
	height:500px;
	border-style: solid;
	border-width: 61px;
	-moz-border-image: url(./img/border.gif) 61 stretch;
	-webkit-border-image: url(./img/border.gif) 61 stretch;
	-o-border-image: url(./img/border.gif) 61 stretch;
	border-image: url(./img/border.gif) 61 stretch;
}

.content{
	float:left;
	width:75%;
	margin: -20px 0px -20px -20px;
}

aside{
	margin: -20px -20px -20px 76%;
}

footer{
	display:block;
	background: #3366ff url(./img/footer_uzor.gif) repeat-x;
	height:64px;
}